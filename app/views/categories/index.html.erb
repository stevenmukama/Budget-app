<header>
  <nav class="flex-center navbar">
    <%= button_to image_tag("icons8-log-out-50 (1).png", width: 24), destroy_user_session_path, 
    method: :delete, class: 'no-styling flex-center', id: "btn-logout" %>
    <a href="/categories" class="flex-center max-content-flex"><h1>Transactions</h1></a>
  </nav>
</header>

<header class="row categorie-header">
  <p class="max-content-flex">Total amount: </p>
  <p> <strong>$<%= @total_amount %></strong> </p>
</header>
<p style="color: green"><%= notice %></p>

<ul id="categories" class="categories">
  <% @categories.each do |category| %>
    <%= link_to category do %>
      <%= render category %>
    <% end %>
  <% end %>
</div>

<div class="btns flex-center margin-24">
  <%= link_to "New Category", new_category_path %>
</div>
