<%= form_with(model: category) do |form| %>
  <div>
    <%= form.text_field :name, placeholder: "Category's Name*", class: "input-default first", required: true %>
  </div>

  <div>
    <%= form.text_field :icon, placeholder: "Icon URL*", class: "input-default", required: true %>
  </div>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="btns max-width column  actions">
    <%= form.submit "Create Category" %>
  </div>
<% end %>
